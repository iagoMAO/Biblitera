         <children>
            <AnchorPane layoutY="60.0" prefHeight="660.0" prefWidth="1280.0">
               <children>
                  <HBox layoutX="200.0" layoutY="60.0">
                     <children>
                        <ImageView fx:id="bookCover" fitHeight="500.0" fitWidth="300.0" pickOnBounds="true">
                           <image>
                              <Image url="@images/book.png" />
                           </image>
                        </ImageView>
                        <Pane prefHeight="544.0" prefWidth="581.0">
                           <children>
                              <Label fx:id="bookName" prefHeight="17.0" prefWidth="571.0" styleClass="biblitera-logo" text="É Assim que Acaba" textFill="#1f2947">
                                 <font>
                                    <Font name="Source Sans 3 Bold" size="30.0" />
                                 </font>
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                                 <padding>
                                    <Insets left="25.0" />
                                 </padding>
                              </Label>
                              <ScrollPane hbarPolicy="NEVER" layoutY="121.0" prefHeight="315.0" prefWidth="573.0" stylesheets="@css/style.css">
