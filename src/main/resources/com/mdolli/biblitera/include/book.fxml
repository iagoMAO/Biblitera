   <children>
      <VBox prefHeight="250.0" prefWidth="155.0">
         <children>
            <HBox prefHeight="250.0" prefWidth="154.0">
               <children>
                  <ImageView fx:id="bookCover" fitHeight="250.0" fitWidth="155.0" pickOnBounds="true" styleClass="book-cover">
                     <image>
                        <Image url="@../images/book.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
